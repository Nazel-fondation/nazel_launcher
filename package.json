{
  "name": "nazel",
  "version": "1.0.0",
  "description": "Personal launcher for private servers",
  "main": "src/main.js",
  "scripts": {
    "start": "npx tailwindcss -i ./src/assets/css/styles.css -o ./src/assets/css/tailwind.css && electron .",
    "build": "npx tailwindcss -i ./src/assets/css/styles.css -o ./dist/assets/css/tailwind.css && electron-builder",
    "make": "npx tailwindcss -i ./src/assets/css/styles.css -o ./dist/assets/css/tailwind.css && electron-forge make",
    "publish": "npx tailwindcss -i ./src/assets/css/styles.css -o ./dist/assets/css/tailwind.css && electron-builder -p always"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "nazel"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "thibault0712",
              "name": "nazel_launcher"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ]
    }
  },
  "build": {
    "appId": "app.web.nazel-launcher",
    "productName": "Nazel",
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "thibault0712",
        "repo": "nazel_launcher"
      }
    ],
    "linux": {
      "target": "AppImage",
      "artifactName": "Nazel.AppImage"
    },
    "win": {
      "target": "nsis",
      "artifactName": "Nazel.exe"
    },
    "mac": {
      "target": "dmg",
      "artifactName": "Nazel.dmg"
    }
  },
  "keywords": [],
  "author": "thibault0712",
  "license": "ISC",
  "dependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "electron-dl": "^4.0.0",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.1.6",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "extract-zip": "^2.0.1",
    "firebase": "^10.12.2",
    "fs-extra": "^11.2.0",
    "gsap": "^3.12.5",
    "jimp": "^0.22.12",
    "minecraft-launcher-core": "^3.18.1",
    "node-env-run": "^4.0.2",
    "node-fetch": "^3.3.2",
    "node-notifier": "^10.0.1",
    "postcss": "^8.4.38",
    "rpmbuild": "^0.0.23",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3"
  }
}
